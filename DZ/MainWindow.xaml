<Window x:Class="EFCore_HomeWork_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFCore_HomeWork_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="ComboBox" Grid.ColumnSpan="2"/>
        
        <Button x:Name="GetButton" Grid.Column="0" Grid.Row="3" FontSize="25" Content="Get" Click="GetButtonClick"/>
        <Button x:Name="UpdateButton" Grid.Column="1" Grid.Row="3" FontSize="25" Content="Update"/>

        <DataGrid x:Name="DataGrid" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

    </Grid>
</Window>
